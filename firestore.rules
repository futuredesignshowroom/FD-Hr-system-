rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Basic auth check
    function isAuth() {
      return request.auth != null;
    }

    // Admin check - check both custom claim and database role
    function isAdmin() {
      return isAuth() && (
        request.auth.token.admin == true ||
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    // Users collection
    match /users/{userId} {
      allow read, update: if isAuth() && (request.auth.uid == userId || isAdmin());
      allow create: if isAuth() && request.resource.data.id == request.auth.uid;
      allow delete: if isAdmin();
    }

    // Employees collection (each doc should represent an employee, id often equals userId)
    match /employees/{employeeId} {
      allow read: if isAuth() && (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuth() && (request.auth.uid == resource.data.userId || isAdmin());
      allow delete: if isAdmin();
    }

    // Attendance records
    match /attendance/{attendanceId} {
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuth() && (resource.data.userId == request.auth.uid || isAdmin());
      allow update: if isAuth() && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Leaves collection
    match /leaves/{leaveId} {
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuth() && (resource.data.userId == request.auth.uid || isAdmin());
      allow update: if isAuth() && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Leave config - admins only
    match /leaveConfig/{doc=**} {
      allow read, write: if isAdmin();
    }

    // Leave balances - allow users to read/write their own balance; admins can access all
    match /leaveBalance/{userId} {
      allow read, write: if isAuth() && (request.auth.uid == userId || isAdmin());
    }

    // Salary collection - users can read their own salary records; only admins can write
    match /salary/{salaryId} {
      allow read: if isAuth() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create, update, delete: if isAdmin();
    }

    // Salary config - admins only
    match /salaryConfig/{doc=**} {
      allow read, write: if isAdmin();
    }

    // Settings - admins only
    match /settings/{doc=**} {
      allow read, write: if isAuth();
    }

    // Notifications - users can read their own and mark as read; admins can manage
    match /notifications/{notificationId} {
      allow read: if isAuth() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuth();
      allow update: if isAuth() && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
