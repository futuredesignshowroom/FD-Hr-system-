rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Simple authentication check
    function isAuth() {
      return request.auth != null;
    }

    // Check if user is admin
    function isAdmin() {
      return isAuth(); // Temporarily allow all authenticated users admin access for testing
    }

    // Users collection - Admins can read all, users can read/update their own
    match /users/{userId} {
      // Users can read their own document
      allow read: if isAuth() && request.auth.uid == userId;
      // Admins can read all users
      allow read: if isAdmin();
      // Users can create their own profile
      allow create: if isAuth() && request.resource.data.id == request.auth.uid;
      // Users can update their own profile
      allow update: if isAuth() && request.auth.uid == userId;
      // Admins can update any user
      allow update: if isAdmin();
      // No one can delete
      allow delete: if false;
    }

    // Attendance collection - Users can read/write their own; admins can read/write all
    match /attendance/{document=**} {
      allow read: if isAuth() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      // Allow creating attendance documents where the record's userId matches the signed-in user
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      // Allow users to update their own attendance (for check in/out)
      allow update: if isAuth() && resource.data.userId == request.auth.uid;
      // Allow admins full write access (update/delete)
      allow update, delete: if isAdmin();
    }

    // Leaves collection - Users can read/write their own leave requests; admins can read/write all
    match /leaves/{document=**} {
      allow read: if isAuth() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      // Allow users to create their own leave requests
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      // Allow users to update their own leave requests
      allow update: if isAuth() && resource.data.userId == request.auth.uid;
      // Admins can create/modify/approve/reject
      allow update, delete: if isAuth();
    }

    // Salary collection - Users can read their own; admins can read/write all
    match /salary/{document=**} {
      allow read: if isAuth() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow write: if isAdmin();
    }

    // Employees collection - Users can read/write their own; admins can read/write all
    match /employees/{document=**} {
      // Allow reading if owner or admin
      allow read: if isAuth() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      // Allow users to create their own employee document
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      // Allow users to update their own employee document (profile)
      allow update: if isAuth() && resource.data.userId == request.auth.uid;
      // Allow admins to write/update/delete
      allow update, delete: if isAdmin();
    }

    // Leave Config collection - Admins can read/write
    match /leaveConfig/{document=**} {
      allow read, write: if isAdmin();
    }

    // Leave Balance collection - Admins can read/write
    match /leaveBalance/{document=**} {
      allow read, write: if isAuth();
    }

    // Salary Config collection - Admins can read/write
    match /salaryConfig/{document=**} {
      allow read, write: if isAdmin();
    }

    // Messages collection
    match /messages/{document=**} {
      // Users can read their own messages
      allow read: if isAuth() && (
        resource.data.senderId == request.auth.uid ||
        resource.data.recipientId == request.auth.uid
      );
      // Admins can read all messages
      allow read: if isAdmin();
      // Users can send messages
      allow create: if isAuth() && request.resource.data.senderId == request.auth.uid;
      // Admins can create messages
      allow create: if isAdmin();
      allow update, delete: if false;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
